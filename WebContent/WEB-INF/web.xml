<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>fitness-shop</display-name>
  
  <servlet>
	  <servlet-name>HomeServlet</servlet-name>
	  <servlet-class>com.patrickhub.fitnessshop.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>HomeServlet</servlet-name>
  <url-pattern></url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ProductServlet</servlet-name>
  	<servlet-class>com.patrickhub.fitnessshop.servlet.ProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ProductServlet</servlet-name>
  	<url-pattern>/product</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>URLFilter</filter-name>
  	<filter-class>com.patrickhub.fitnessshop.filter.URLFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>URLFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>